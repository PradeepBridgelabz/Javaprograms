package com.bridgelab.ooprograms;

import java.util.ArrayList;

public class Search{

	public ArrayList<DoctersModel> searchDoctorName(ArrayList<DoctersModel> doctorList,String name){
		ArrayList<DoctersModel> tempList=new ArrayList<DoctersModel>();
		for(DoctersModel doctor:doctorList){
			if(doctor.getName().equals(name)){
				tempList.add(doctor);
			}
		}
		return tempList;
	}

	public ArrayList<DoctersModel> searchDoctorId(ArrayList<DoctersModel> doctorList,String id){
		ArrayList<DoctersModel> tempList=new ArrayList<DoctersModel>();
		for(DoctersModel doctor:doctorList){
			if(doctor.getId()==id){
				tempList.add(doctor);
			}
		}
		return tempList;
	}
	public ArrayList<DoctersModel> searchDoctorSpecialization(ArrayList<DoctersModel> doctorList,String specialization){
		ArrayList<DoctersModel> tempList=new ArrayList<DoctersModel>();
		for(DoctersModel doctor:doctorList){
			if(doctor.getSpecialization().equals(specialization)){
				tempList.add(doctor);
			}
		}
		return tempList;
	}
	public ArrayList<DoctersModel> searchDoctorAvailability(ArrayList<DoctersModel> doctorList,String availability){
		ArrayList<DoctersModel> tempList=new ArrayList<DoctersModel>();
		for(DoctersModel doctor:doctorList){
			if(doctor.getAvailability().equals(availability)){
				tempList.add(doctor);
			}
		}
		return tempList;
	}
	public ArrayList<PatientModel> searchPatientMobileNumber(ArrayList<PatientModel> patientList,String mobileNumber){
		ArrayList<PatientModel> tempList=new ArrayList<PatientModel>();
		for(PatientModel patient:patientList){
			if(patient.getmobileNumber().equals(mobileNumber)){
				tempList.add(patient);
			}
		}
		return tempList;
	}
	public ArrayList<PatientModel> searchPatientId(ArrayList<PatientModel> patientList,int id){
		ArrayList<PatientModel> tempList=new ArrayList<PatientModel>();
		for(PatientModel patient:patientList){
			if(patient.getId()==id){
				tempList.add(patient);
			}
		}
		return tempList;
	}
	public ArrayList<PatientModel> searchPatientAge(ArrayList<PatientModel> patientList,int age){
		ArrayList<PatientModel> tempList=new ArrayList<PatientModel>();
		for(PatientModel patient:patientList){
			if(patient.getAge()==age){
				tempList.add(patient);
			}
		}
		return tempList;
	}
}
